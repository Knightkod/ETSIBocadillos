<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sanzfdu.cafeteriaetsib">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--
ic_launcher es el iconito de la aplicacion en si, es lo que tenemos que personalizar
para que salga nuestro bocatilla
    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".pl.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pl.MenuPrincipal" android:configChanges="orientation"></activity>
        <activity
            android:name=".pl.Activity_fav"
            android:label="@string/title_activity_fav"
            android:configChanges="orientation"></activity>
        <activity
            android:name=".pl.List_complete_filters"
            android:label="@string/title_list_complete_filters"
            android:configChanges="orientation"></activity>
        <activity
            android:name=".pl.Latest"
            android:label="@string/title_latest"
            android:configChanges="orientation"></activity>
        <activity
            android:name=".pl.Rating"
            android:label="@string/title_rating"
            android:configChanges="orientation"></activity>
        <activity
            android:name=".pl.Randomize"
            android:label="@string/randomize"
            android:configChanges="orientation"></activity>
        <activity
            android:name=".pl.About_us"
            android:label="@string/title_about_us"
            android:configChanges="orientation"></activity>
        <activity
            android:name=".pl.Filter"
            android:label="@string/title_filter"
            android:configChanges="orientation"></activity>
        <activity android:name=".pl.Fragment_web"
            android:configChanges="orientation"></activity>

    </application>

</manifest>
